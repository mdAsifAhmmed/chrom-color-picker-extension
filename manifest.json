{
  "name": "Color picker 2022",
  "description": "A color picker extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "/images/color_picker_16.png",
    "24": "/images/color_picker_24.png",
    "32": "/images/color_picker_32.png"
  }
}
